
@using EntityLayer.Concrete
@model List<Blog>




<div class="tech-btm">
    <h4>Yazarın Diğer Yazıları</h4>


    @foreach (var item in Model)
    {
        <div class="blog-grids row mb-3">

            <div class="col-md-7 blog-grid-right">
                <h5>
                    <a href="~/CoreBlog/single.html">@item.BlogTitle </a>
                </h5>

            </div>

        </div>

        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="~/CoreBlog/single.html">
                    <img src="@item.BlogImage" class="img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="~/CoreBlog/single.html">@item.BlogContent.Substring(1, item.BlogContent.Substring(0, 130).LastIndexOf(" ")) </a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i>  @((item.BlogCreateDate==null)?item.BlogCreateDate :(DateTime.Parse(item.BlogCreateDate)).ToString("dd-MMM-              yyyy") )
                    </span>
                </div>
            </div>

        </div>

    }
</div>